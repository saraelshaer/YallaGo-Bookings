@model ReadDestinationDto

@{
    ViewData["Title"] = "Details Destination";
    Layout = "_AdminLayout";
}

<div class="container mt-5">
    <h2 class="mb-4">Destination Details</h2>

    <div class="card shadow rounded">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tour ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
               
                <dt class="col-sm-3 fw-bold">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="~/images/Destinations/@Model.ImageUrl" alt="Destination Image" class="img-thumbnail" style="max-height: 200px;" />
                    }
                    else
                    {
                        <span class="text-muted">No image available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center ">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn me-2" style="background-color: #163152 ;color: white;">Edit</a>
        <a asp-action="AdminIndex" class="btn btn-secondary">Back to List</a>
    </div>
</div>