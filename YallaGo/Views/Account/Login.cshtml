@using YallaGo.UI.ViewModels.Account
@model LoginUserViewModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "_HeaderLayout";

}

<section class="signin d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-9">
                <div class="signin-box text-center floating rounded-5 p-5">
                    <h2 class="signin-title">Sign In</h2>
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-center small"></div>

                        <input asp-for="Email" placeholder="Your Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>

                        <input asp-for="Password" placeholder="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                        <div style="text-align:left; color: white">
                            <input class="form-check-input " asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                        </div>


                        <input type="submit" value="Sign In" class="btn btn-signin text-decoration-none" />
                    </form>
                    <p class="signup-link">Don't have an account? <a asp-action="Register">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
