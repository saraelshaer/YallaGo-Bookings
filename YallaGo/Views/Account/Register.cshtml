@using YallaGo.UI.ViewModels.Account
@model RegisterUserViewModel

@{
    ViewData["Title"] = "Sign Up ";
    Layout = "_HeaderLayout";
}

<section class="signup py-5 d-flex  align-items-center">
    <div class="container w-75 rounded-4 bg-white g-0 overflow-hidden">
        <div class="row  d-flex align-items-center rounded-4 ">
            <div class="col-lg-4">
                <div >
                    <img src="~/images/signup.jpg" alt="Travel With Us" class="w-100 h-100 rounded-2 object-fit-cover" style="object-fit: cover;">

                </div>
            </div>
            <div class="col-lg-7 py-4 px-5">
                <div class="text-center">
                    <h3 class="fw-bold mb-5 text-primary">SignUp</h3>
                    <form asp-action="Register" class="px-lg-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group text-start ">
                            <input asp-for="FirstName" placeholder="First Name" class="form-control mb-3" maxlength="100" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                      </div>
                        
                        <div class="form-group text-start ">
                            <input asp-for="LastName" placeholder="Last Name" class="form-control mb-3" maxlength="100" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                   
                        <div class="form-group text-start ">
                            <input asp-for="Email" placeholder="Your Email" class="form-control mb-3" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group text-start ">
                            <input asp-for="Password" placeholder="Password" class="form-control mb-3" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group text-start mb-2">
                            <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control mb-3" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                       

                       <div>
                            <input type="submit" value="Sign Up" class="btn btn-primary" />
                       </div>
                       
                    </form>
                    <p class="mt-3">Already have an account? <a asp-action="Login" class="text-primary text-decoration-none fw-bold">Sign In</a></p>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
